    </repositories>

    <distributionManagement>
        <snapshotRepository>
            <uniqueVersion>true</uniqueVersion>
            <id>yadda-snapshots</id>
            <name>YADDA snapshots</name>
            <url>http://maven.icm.edu.pl/artifactory/yadda-snapshots</url>
        </snapshotRepository>
        <repository>
            <uniqueVersion>false</uniqueVersion>
            <id>yadda-releases</id>
            <name>YADDA releases</name>
            <url>http://maven.icm.edu.pl/artifactory/yadda-releases</url>
        </repository>
    </distributionManagement>

</project>
